<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Upload your surfboard details</h1>
      <%= simple_form_for @booking do |f| %>
        <%= f.input :status %>
        <%= f.input :total_price %>
        <%= f.input :start_day %>
        <%= f.input :end_day %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
