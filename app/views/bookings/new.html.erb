<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Upload your surfboard details</h1>
      <%= simple_form_for @booking do |f| %>
        <%= f.input :status %>
        <%= f.input :total_price %>
        <tr>
            <td><%= f.label text="Starts:" %></td>
            <td><%= f.datetime_select :start_day, :order => [:day, :month, :year]%></td>
        </tr>
        <tr>
            <td><%= f.label text="Ends:" %></td>
            <td><%= f.datetime_select :end_day,:order => [:day, :month, :year]%></td>
        </tr>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
